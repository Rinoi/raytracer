#include <stdlib.h>
#include <stdio.h>
#include "rt.h"

t_ptn	*call_norm_triangle(t_obj *o, __attribute__((unused)) t_ptn *p)
{
  t_ptn	*ptn;
  t_try	*try;

  try = (t_try)(o->data);
  if ((ptn = malloc(sizeof(t_ptn))) == NULL)
    return (NULL);
  ptn->x = (try->a2.y * try->a3.z) - (try->a2.z * try->a3.y);
  ptn->y = (try->a2.z * try->a3.x) - (tru->a2.x * try->a3.z);
  ptn->z = (try->a2.x * try->a3.y) - (try->a2.y * try->a3.x);
  return (ptn);
}
